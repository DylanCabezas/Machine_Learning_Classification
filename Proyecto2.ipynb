    def visualizar_iris(self):
        iris = load_iris()
        X = iris.data[:, :2]
        y = iris.target

        mask = y != 2
        X = X[mask]
        y = y[mask]

        model = LogisticRegression().fit(X, y)
        w1, w2 = model.coef_[0]
        b = model.intercept_[0]

        x_min, x_max = float(X[:, 0].min()), float(X[:, 0].max())
        y_min, y_max = float(X[:, 1].min()), float(X[:, 1].max())

        axes, title = self.make_axes(
            x_range=[x_min, x_max, (x_max - x_min) / 4],
            y_range=[y_min, y_max, (y_max - y_min) / 4],
            title_text="Warm-up: Iris (2 clases) en 2D",
        )
        axes.shift(DOWN * 0.2)

        palette = [BLUE, RED]
        points = self.dots_from_xy_labels(axes, X, y, palette, radius=0.055)

        boundary = axes.plot(lambda x: -(w1 * x + b) / (w2 + 1e-9), color=YELLOW)

        new_x = np.array([np.mean([x_min, x_max]) + 0.2, np.mean([y_min, y_max]) - 0.2])
        q = Dot(axes.c2p(new_x[0], new_x[1]), radius=0.08, color=WHITE)
        q_label = Text("nuevo punto", font_size=24).next_to(q, RIGHT)

        self.play(Write(title))
        self.play(Create(axes))
        self.play(FadeIn(points, lag_ratio=0.002))
        self.wait(0.5)
        self.play(Create(boundary))
        self.play(FadeIn(q), FadeIn(q_label))
        self.wait(2)

        hint = Text("Pero… KNN y Árbol NO necesitan una línea perfecta.", font_size=30).to_edge(DOWN)
        self.play(Write(hint))
        self.wait(2)

        self.play(FadeOut(VGroup(title, axes, points, boundary, q, q_label, hint)))

    def knn_interactivo(self):
        title = Text("KNN: votar con los vecinos más cercanos", font_size=38).to_edge(UP)

        rng = np.random.default_rng(2)
        X = np.vstack([
            rng.normal(loc=[0.2, 0.65], scale=[0.12, 0.10], size=(30, 2)),
            rng.normal(loc=[0.75, 0.30], scale=[0.10, 0.12], size=(30, 2)),
        ])
        y = np.array([0] * 30 + [1] * 30)

        Xn, mins2, maxs2 = self.normalize_2d(X, padding=0.05)

        axes, _ = self.make_axes(
            x_range=[mins2[0], maxs2[0], 0.25],
            y_range=[mins2[1], maxs2[1], 0.25],
            title_text=None
        )
        
        axes.shift(LEFT * 2.8) 

        palette = [BLUE, RED]
        dots = self.dots_from_xy_labels(axes, Xn, y, palette, radius=0.055)

        q_xy = np.array([0.55, 0.55])
        q = Dot(axes.c2p(q_xy[0], q_xy[1]), radius=0.085, color=WHITE)
        q_text = Text("¿Clase?", font_size=28).next_to(q, RIGHT)

        self.play(Write(title))
        self.play(Create(axes))
        self.play(FadeIn(dots, lag_ratio=0.01))
        self.play(FadeIn(q), FadeIn(q_text))
        self.wait(1)

        dists = np.linalg.norm(Xn - q_xy[None, :], axis=1)
        idx_sorted = np.argsort(dists)

        for K in [3, 7]:
            k_title = Text(f"K = {K}", font_size=34, color=YELLOW).next_to(title, DOWN, buff=0.25)
            self.play(FadeIn(k_title, shift=DOWN))

            neigh_idx = idx_sorted[:K]
            neighbor_dots = VGroup()
            segments = VGroup()

            for i in neigh_idx:
                nd = Dot(axes.c2p(Xn[i, 0], Xn[i, 1]), radius=0.075, color=palette[int(y[i])])
                ring = Circle(radius=0.11).move_to(nd.get_center()).set_stroke(width=3).set_color(YELLOW)
                neighbor_dots.add(VGroup(ring, nd))

                seg = Line(q.get_center(), axes.c2p(Xn[i, 0], Xn[i, 1])).set_stroke(width=2)
                segments.add(seg)

            self.play(Create(segments, lag_ratio=0.02), FadeIn(neighbor_dots, lag_ratio=0.05))
            self.wait(0.8)

            vote = self.knn_vote_label(y[neigh_idx])
            vote_color = palette[int(vote)]
            vote_text = Text(f"Votación → clase {vote}", font_size=32, color=vote_color).to_edge(DOWN)

            self.play(Write(vote_text))
            self.play(q.animate.set_color(vote_color))
            self.wait(1.4)

            self.play(FadeOut(VGroup(segments, neighbor_dots, vote_text, k_title)))
            self.play(q.animate.set_color(WHITE))
            self.wait(0.2)

        
        key = VGroup(
            Text("Idea clave:", font_size=32, color=YELLOW),
            Text("KNN depende de la", font_size=26),
            Text("distancia y de K.", font_size=26),
            Text("Si escalas mal, cambia", font_size=26),
            Text("el resultado.", font_size=26),
        ).arrange(DOWN, aligned_edge=LEFT)
        
        
        key.next_to(axes, RIGHT, buff=0.8)

        self.play(FadeIn(key, shift=LEFT))
        self.wait(3.0)
        self.play(FadeOut(VGroup(title, axes, dots, q, q_text, key)))

    def explicacion_nodos(self):
        
