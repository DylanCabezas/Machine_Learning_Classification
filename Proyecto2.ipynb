        self.play(FadeOut(VGroup(title, axes, dots, msg)))

    def entrenar_y_evaluar_wine(self):
        wine = load_wine()
        X = wine.data
        y = wine.target

        knn = KNeighborsClassifier(n_neighbors=5)
        tree = DecisionTreeClassifier(max_depth=4, random_state=0)

        start = time.time()
        knn.fit(X, y)
        self.knn_time = time.time() - start

        start = time.time()
        tree.fit(X, y)
        self.tree_time = time.time() - start

        self.y_true = y
        self.y_knn = knn.predict(X)
        self.y_tree = tree.predict(X)

        self.cm_knn = confusion_matrix(y, self.y_knn)
        self.cm_tree = confusion_matrix(y, self.y_tree)

    def metricas_y_comparacion(self):
        title = Text("Comparación (Wine): métricas + tiempo", font_size=38).to_edge(UP)
        self.play(Write(title))

        acc_knn = accuracy_score(self.y_true, self.y_knn)
        acc_tree = accuracy_score(self.y_true, self.y_tree)

        f1_knn = f1_score(self.y_true, self.y_knn, average="weighted")
        f1_tree = f1_score(self.y_true, self.y_tree, average="weighted")

        metrics = [
            ("Accuracy", acc_knn, acc_tree),
            ("F1-score", f1_knn, f1_tree),
            ("Tiempo (s)", self.knn_time, self.tree_time),
        ]

        labels = ["KNN", "Árbol"]

        for name, v_knn, v_tree in metrics:
            metric_title = Text(name, font_size=34, color=YELLOW).next_to(title, DOWN, buff=0.25)

            ymax = max(v_knn, v_tree) * 1.25 if max(v_knn, v_tree) > 0 else 1
            bars = BarChart(
                [v_knn, v_tree],
                bar_names=labels,
                y_range=[0, ymax, ymax / 4],
                x_length=5,
                y_length=3,
            ).shift(DOWN * 0.3)

            values = VGroup(
                Text(f"KNN:  {v_knn:.3f}", font_size=26),
                Text(f"Árbol: {v_tree:.3f}", font_size=26),
            ).arrange(DOWN, aligned_edge=LEFT).next_to(bars, RIGHT, buff=0.5)

            self.play(FadeIn(metric_title))
            self.play(Create(bars))
            self.play(FadeIn(values))
            self.wait(1.6)
            self.play(FadeOut(VGroup(metric_title, bars, values)))

        cm_title = Text("Confusion Matrix (entrenando y probando en lo mismo)", font_size=30).to_edge(DOWN)
        self.play(Write(cm_title))
        self.wait(0.5)

        cm_knn_txt = self._matrix_to_mobject(self.cm_knn, "KNN", x=-3.3)
        cm_tree_txt = self._matrix_to_mobject(self.cm_tree, "Árbol", x=3.3)

        self.play(FadeIn(cm_knn_txt, shift=UP), FadeIn(cm_tree_txt, shift=UP))
    
        self.wait(2.8)

        self.play(FadeOut(VGroup(title, cm_title, cm_knn_txt, cm_tree_txt)))

    def _matrix_to_mobject(self, M, label, x=0):
        header = Text(label, font_size=30, color=YELLOW)
        rows = []
        for r in M:
            rows.append(Text("  ".join([str(int(v)) for v in r]), font_size=28))
        body = VGroup(*rows).arrange(DOWN, buff=0.15)
        block = VGroup(header, body).arrange(DOWN, buff=0.25).shift(RIGHT * x).shift(DOWN * 0.3)

        box = SurroundingRectangle(block, corner_radius=0.2, buff=0.25)
        return VGroup(box, block)

    def conclusiones(self):
        titulo = Text("Conclusiones", font_size=44, color=BLUE).to_edge(UP)

        puntos = VGroup(
            Text("• Clasificación = asignar etiquetas a nuevos datos.", font_size=30),
            Text("• KNN: simple, depende de distancia y de K.", font_size=30),
            Text("• Árbol: reglas interpretables, puede sobreajustar.", font_size=30),
            Text("• Métricas ayudan a comparar: accuracy, F1, tiempo.", font_size=30),
            Text("• Buenas prácticas: escalar, separar train/test, validar.", font_size=30, color=YELLOW),
        ).arrange(DOWN, aligned_edge=LEFT, buff=0.25).shift(UP * 0.15)

        self.play(Write(titulo))
        for p in puntos:
            self.play(FadeIn(p, shift=LEFT))
            self.wait(0.6)

        outro = Text("Fin ✨", font_size=36).to_edge(DOWN)
        self.play(Write(outro))
        self.wait(2.0)
        self.play(FadeOut(VGroup(titulo, puntos, outro)))
