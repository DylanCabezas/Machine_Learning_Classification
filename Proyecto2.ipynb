from manim import *
import numpy as np
import time
from sklearn.datasets import load_iris, load_wine, make_blobs
from sklearn.neighbors import KNeighborsClassifier
from sklearn.tree import DecisionTreeClassifier
from sklearn.metrics import accuracy_score, f1_score, confusion_matrix
from sklearn.linear_model import LogisticRegression

class ClassificationDemo(Scene):

    def construct(self):
        self.titulo()
        self.motivacion_problema()
        self.visualizar_iris()
        self.knn_interactivo()
        
        self.explicacion_nodos() 
        self.arbol_interactivo()
        
        self.dataset_grande()
        self.entrenar_y_evaluar_wine()
        self.metricas_y_comparacion()
        self.conclusiones()

   
    def make_axes(self, x_range, y_range, title_text=None):
        axes = Axes(
            x_range=x_range,
            y_range=y_range,
            x_length=5.5, 
            y_length=4.2,
            axis_config={"include_numbers": True, "font_size": 24},
            tips=False,
        )

        title = None
        if title_text:
            title = Text(title_text, font_size=36).to_edge(UP)

        return axes, title

    def dots_from_xy_labels(self, axes, X2, y, palette, radius=0.05):
        vg = VGroup()
        for (x1, x2), label in zip(X2, y):
            vg.add(Dot(axes.c2p(x1, x2), radius=radius, color=palette[int(label)]))
        return vg

    def normalize_2d(self, X2, padding=0.05):
        mins = X2.min(axis=0)
        maxs = X2.max(axis=0)
        span = np.maximum(maxs - mins, 1e-9)
        Xn = (X2 - mins) / span
        mins2 = Xn.min(axis=0) - padding
        maxs2 = Xn.max(axis=0) + padding
        return Xn, mins2, maxs2

    def knn_vote_label(self, neighbor_labels):
        vals, counts = np.unique(neighbor_labels, return_counts=True)
        return vals[np.argmax(counts)]

    
