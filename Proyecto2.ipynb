    def motivacion_problema(self):
        title = Text("Motivación: ¿Cómo decide un modelo?", font_size=38).to_edge(UP)

        text = VGroup(
            Text("Tenemos datos con etiquetas (clases).", font_size=30),
            Text("Llega un nuevo dato... ¿qué etiqueta le asignamos?", font_size=30),
            Text("Hoy lo veremos con dos ideas:", font_size=30),
            Text("1) Mirar vecinos (KNN)", font_size=30, color=BLUE),
