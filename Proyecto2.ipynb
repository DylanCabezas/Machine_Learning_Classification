    def arbol_interactivo(self):
        title = Text("Árbol: dividir el plano con reglas", font_size=38).to_edge(UP)

        X, y = make_blobs(n_samples=90, centers=3, cluster_std=1.1, random_state=3)
        Xn, mins2, maxs2 = self.normalize_2d(X, padding=0.05)

        axes, _ = self.make_axes(
            x_range=[mins2[0], maxs2[0], 0.25],
            y_range=[mins2[1], maxs2[1], 0.25],
            title_text=None
        )
        
        axes.shift(LEFT * 3) 

        palette = [BLUE, GREEN, RED]
        dots = self.dots_from_xy_labels(axes, Xn, y, palette, radius=0.05)

        self.play(Write(title))
        self.play(Create(axes))
        self.play(FadeIn(dots, lag_ratio=0.01))
        self.wait(0.8)

        tree = DecisionTreeClassifier(max_depth=3, random_state=0)
        tree.fit(Xn, y)

        split1_x = 0.55
        split2_y = 0.48
        split3_x = 0.35

        l1 = axes.get_vertical_line(axes.c2p(split1_x, 0), line_func=Line).set_stroke(width=4).set_color(YELLOW)
        l2 = axes.get_horizontal_line(axes.c2p(0, split2_y), line_func=Line).set_stroke(width=4).set_color(YELLOW)
        l3 = axes.get_vertical_line(axes.c2p(split3_x, 0), line_func=Line).set_stroke(width=4).set_color(YELLOW)

        self.play(Create(l1))
        self.wait(0.6)
        self.play(Create(l2))
        self.wait(0.6)
        self.play(Create(l3))
        self.wait(0.6)

        q_xy = np.array([0.40, 0.62])
        q = Dot(axes.c2p(q_xy[0], q_xy[1]), radius=0.085, color=WHITE)
        q_lbl = Text("nuevo", font_size=24).next_to(q, RIGHT)
        self.play(FadeIn(q), FadeIn(q_lbl))

        
        steps = VGroup(
            Text("¿x < 0.55?  Sí → izquierda", font_size=26),
            Text("¿y < 0.48?  No → arriba", font_size=26),
            Text("¿x < 0.35?  No → hoja", font_size=26),
        ).arrange(DOWN, aligned_edge=LEFT).next_to(axes, RIGHT, buff=1.0)

        self.play(FadeIn(steps, shift=LEFT))
        self.wait(1.5)

        pred = int(tree.predict(q_xy.reshape(1, -1))[0])
        pred_text = Text(f"Predicción del árbol → clase {pred}", font_size=32, color=palette[pred]).to_edge(DOWN)
        
        self.play(Write(pred_text))
        self.play(q.animate.set_color(palette[pred]))
        self.wait(1.6)

        key = Text("Ventaja: interpretables. Riesgo: sobreajuste si crece demasiado.", font_size=28).to_edge(DOWN)
        
        self.play(FadeOut(pred_text))
        self.play(Write(key))
        self.wait(1.8)

        self.play(FadeOut(VGroup(title, axes, dots, l1, l2, l3, q, q_lbl, steps, key)))

